<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keer_QA"
    android:background="@drawable/qm2"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="FINANCE SURVEY"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="181dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="What's your annual income?"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <EditText
        android:textColor="@android:color/white"
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Answer 1"
        android:textColorHint="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="What's your main source of income?"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <EditText
        android:textColor="@android:color/white"
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Answer 2"
        android:textColorHint="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="What's the main cause of any loss?"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Answer 3"
        android:textColorHint="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="In which season do you face loss and why?"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:hint="Answer 4"
        android:textColorHint="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Is there any way the government can help reduce loss?"
        android:textColor="#ffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/et5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center_horizontal"

        android:textColor="@android:color/white"        android:hint="Answer 5"
        android:textColorHint="@android:color/white"
        />
    <Button
        android:id="@+id/f_logbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="SUBMIT"

        />


</androidx.appcompat.widget.LinearLayoutCompat>