<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RespDetails"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvQB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="RESPONDANT DETAILS"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="181dp" />
    <EditText
        android:id="@+id/Resp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="RespondantID"
         />

    <EditText
        android:id="@+id/Resp_SurvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="SurveyorID"
         />
    <EditText
        android:id="@+id/Resp_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"

        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Name"
         />

    <EditText
        android:id="@+id/Resp_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Age"
         />
    <EditText
        android:id="@+id/Resp_Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"

        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sex"
         />

    <EditText
        android:id="@+id/Resp_Village"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Village"
         />
    <EditText
        android:id="@+id/Resp_no.Fam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"

        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="No.of family members"
       />

    <EditText
        android:id="@+id/Resp_MariStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Marital Status"
         />




</androidx.appcompat.widget.LinearLayoutCompat>